<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout">
    <l:VerticalLayout core:require="{handler: 'myResourcesUi/controller/NameColumn'}">
        <HBox alignItems="Center">
            <Avatar showBorder="true" src="{profilePhoto/profileThumbnail}" displaySize="XS" initials="{profile/initials}" class="sapUiTinyMarginEnd"/>
            <Link text="{profile/fullName}" press="handler.onLinkPress" wrapping="true"/>
        </HBox>
    </l:VerticalLayout>
</core:FragmentDefinition> 