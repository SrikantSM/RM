<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<QuickView
		id="quickView"
		pages="{
			path: '/pages',
			templateShareable: true
		}"
	>
		<QuickViewPage
			pageId="{pageId}"
			header="{header}"
			title="{title}"
			titleUrl="{titleUrl}"
			description="{description}"
			groups="{
				path: 'groups',
				templateShareable: true
			}"
		>
			<avatar>
				<Avatar
					visible="{avatarVisible}"
					src="{icon}"
					initials="{initials}"
					showBorder="true"
					fallbackIcon="{icon}"
					tooltip="{tooltip}"
					displayShape="Circle"
				/>
			</avatar>
			<QuickViewGroup
				heading="{heading}"
				elements="{
					path: 'elements',
					templateShareable: true
				}"
			>
				<QuickViewGroupElement
					label="{label}"
					value="{value}"
					url="{url}"
					type="{elementType}"
					pageLinkId="{pageLinkId}"
					emailSubject="{emailSubject}"
					target="{target}"
				/>
			</QuickViewGroup>
		</QuickViewPage>
	</QuickView>
</core:FragmentDefinition>