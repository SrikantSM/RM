{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Bulk Load",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/src/index.ts",
                "bulk-load"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "TS_NODE_IGNORE": "false"
            }
        },
        {
            "name": "Debug Bulk Delete",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/src/index.ts",
                "bulk-delete"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "TS_NODE_IGNORE": "false"
            }
        }
    ]
}
